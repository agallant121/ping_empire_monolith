<!DOCTYPE html>
<html>
  <head>
    <title><%= t("layouts.application.title") %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <meta name="turbo-prefetch" content="false">
  </head>

  <% body_classes = ["bg-image", "app-body"] %>
  <% body_classes << yield(:body_class) if content_for?(:body_class) %>
  <body class="<%= body_classes.join(" ") %>">
    <% if flash.any? %>
      <div class="flash-toast-region" data-controller="toast">
        <% flash.each do |type, message| %>
          <% type_sym = type.to_sym %>
          <% positive_alert = type_sym == :alert && message.to_s.match?(/success/i) %>
          <% display_type = positive_alert ? :notice : type_sym %>
          <% toast_class, icon_class, heading =
            case display_type
            when :notice
              ["flash-toast--success", "fas fa-seedling", t("layouts.application.flash_success", default: "Success")]
            when :alert
              ["flash-toast--error", "fas fa-fire", t("layouts.application.flash_error", default: "Something went wrong")]
            when :warning
              ["flash-toast--warning", "fas fa-sun", t("layouts.application.flash_warning", default: "Heads up")]
            else
              ["flash-toast--info", "fas fa-compass", t("layouts.application.flash_info", default: "Note")]
            end
          %>

          <div class="flash-toast toast fade <%= toast_class %>" role="status" aria-live="polite" aria-atomic="true" data-toast-target="toast" data-delay="5000" data-bs-autohide="true">
            <div class="toast-header">
              <span class="flash-toast__icon" aria-hidden="true">
                <i class="<%= icon_class %>"></i>
              </span>
              <strong class="me-auto flash-toast__heading"><%= heading %></strong>
            </div>
            <div class="toast-body flash-toast__message"><%= message %></div>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <nav class="navbar app-navbar container-xl">
        <%= link_to t("layouts.application.brand"), root_path, class: "navbar-brand brand-title" %>
        <div class="ms-auto d-flex align-items-center gap-2">
          <div class="d-flex align-items-center gap-3">
            <%= form_with model: current_user, url: language_preference_path, method: :put, local: true, class: "language-switcher" do |form| %>
              <span class="language-switcher__icon" aria-hidden="true">
                <i class="fas fa-globe-americas"></i>
              </span>
              <label class="visually-hidden" for="language-select"><%= t("layouts.application.language") %></label>
              <%= form.select :preferred_language, language_options_for_select, { selected: current_user.preferred_language }, class: "language-select form-select form-select-sm", id: "language-select", onchange: "this.form.submit()" %>
            <% end %>
            <div class="dropdown user-menu">
              <button class="btn btn-sm dropdown-toggle d-flex align-items-center gap-3 user-menu-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="user-avatar" aria-hidden="true">
                  <span class="user-avatar__initial"><%= current_user.avatar_initial %></span>
                </span>
                <span class="user-menu__meta text-start">
                  <span class="nav-label"><%= t("layouts.application.logged_in_label") %></span>
                  <span class="nav-email"><%= current_user.email %></span>
                </span>
              </button>
              <ul class="dropdown-menu dropdown-menu-end user-menu__list" aria-labelledby="userMenu">
                <% if current_user.admin_area_access? %>
                  <li>
                    <%= link_to admin_root_path, class: "dropdown-item d-flex align-items-center gap-2" do %>
                      <i class="fas fa-tachometer-alt" aria-hidden="true"></i>
                      <span><%= t("layouts.application.admin_dashboard") %></span>
                    <% end %>
                  </li>
                  <% if current_user.supervisor? %>
                    <li>
                      <%= link_to admin_users_path, class: "dropdown-item d-flex align-items-center gap-2" do %>
                        <i class="fas fa-users" aria-hidden="true"></i>
                        <span><%= t("layouts.application.manage_users") %></span>
                      <% end %>
                    </li>
                  <% end %>
                  <li>
                    <%= link_to admin_archives_path, class: "dropdown-item d-flex align-items-center gap-2" do %>
                      <i class="fas fa-archive" aria-hidden="true"></i>
                      <span><%= t("layouts.application.archives") %></span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to admin_aws_settings_path, class: "dropdown-item d-flex align-items-center gap-2" do %>
                      <i class="fas fa-cloud" aria-hidden="true"></i>
                      <span><%= t("layouts.application.aws_settings") %></span>
                    <% end %>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                <% end %>
                <li>
                  <%= link_to profile_path, class: "dropdown-item d-flex align-items-center gap-2" do %>
                    <i class="fas fa-address-card" aria-hidden="true"></i>
                    <span><%= t("layouts.application.profile") %></span>
                  <% end %>
                </li>

                <li>
                  <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item d-flex align-items-center gap-2" do %>
                    <i class="fas fa-sign-out-alt" aria-hidden="true"></i>
                    <span><%= t("layouts.application.logout") %></span>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <main class="app-main">
      <div class="content-wrap">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
