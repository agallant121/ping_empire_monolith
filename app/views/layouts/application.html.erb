<!DOCTYPE html>
<html>
  <head>
    <title>PingEmpireMonolith</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body class="bg-image">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= bootstrap_class_for(type) %> alert-dismissible fade show text-center mb-4" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-white bg-opacity-50 border-bottom shadow-sm sticky-top">
        <div class="container">
          <%= link_to "Ping Empire", root_path, class: "navbar-brand fw-bold" %>
          <div class="ms-auto d-flex align-items-center">
            <span class="me-3 text-muted">Logged in as <%= current_user.email %></span>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </nav>
    <% end %>

    <main class="container my-5">
      <%= yield %>
    </main>
  </body>
</html>
