<!DOCTYPE html>
<html>
  <head>
    <title>PingEmpireMonolith</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>


  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-light bg-light mb-3 px-3">
        <div class="container-fluid d-flex align-items-center">
            <span class="navbar-text">
              <span class="ps-3"><strong><%= link_to "Ping Empire", root_path %></strong></span>
              <span class="ps-3">Logged in as <%= current_user.email %></span>
            </span>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-link ms-auto" %>
        </div>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
