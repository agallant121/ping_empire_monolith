<%= form_with(model: [@website, @response]) do |form| %>
  <% if response.errors.any? %>
    <div style="color: red">
      <h2><%= t("responses.form.errors_heading", count: response.errors.count) %></h2>

      <ul>
        <% response.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :website_id, style: "display: block" %>
    <%= form.text_field :website_id %>
  </div>

  <div>
    <%= form.label :status_code, style: "display: block" %>
    <%= form.number_field :status_code %>
  </div>

  <div>
    <%= form.label :response_time, style: "display: block" %>
    <%= form.number_field :response_time %>
  </div>

  <div>
    <%= form.label :error, style: "display: block" %>
    <%= form.text_field :error %>
  </div>

  <div>
    <%= form.submit t("responses.form.submit") %>
  </div>
<% end %>
