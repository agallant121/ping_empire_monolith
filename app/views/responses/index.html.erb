<h1>Responses</h1>

<table>
  <thead>
    <tr>
      <th>Status Code</th>
      <th>Response Time</th>
      <th>Error</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.status_code %></td>
        <td><%= response.response_time %> ms</td>
        <td><%= response.error.presence || "N/A" %></td>
        <td>
          <%= link_to "Show", [@website, response] %> |
          <%= link_to "Edit", edit_website_response_path(@website, response) %> |
          <%= link_to "Destroy", website_response_path(@website, response),
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "New Response", new_website_response_path(@website) %> |
  <%= link_to "Back", website_path(@website) %>
</p>
