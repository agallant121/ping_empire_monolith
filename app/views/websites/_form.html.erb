<%= form_with(model: website, data: { turbo: false }, class: "needs-validation") do |form| %>
  <% if website.errors.any? %>
    <div class="alert alert-danger small py-2">
      <ul class="mb-0">
        <% website.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 lightly-transparent text-muted">
    <%= form.label :url, class: "form-label fw-semibold" %>
    <%= form.text_field :url, class: "form-control", placeholder: "https://example.com" %>
    <div class="form-text text-muted"><%= t("websites.form.url_hint") %></div>
  </div>

  <div class="d-grid">
    <%= form.submit t("websites.form.save"), class: "btn add-website-button" %>
  </div>
<% end %>
