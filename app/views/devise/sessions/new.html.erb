<!DOCTYPE html>
<html>
  <head>
    <title>Login Page</title>

    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" crossorigin="anonymous">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Numans" rel="stylesheet">
  </head>

  <body class="login-page">
    <div class="container mt-4">
      <div class="d-flex justify-content-center h-100">
        <div class="card">
          <div class="card-header">
            <h3><%= "Sign In" %></h3>
            <div class="social_icon d-flex gap-2">
              <%= button_to user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-link p-0" do %>
                <i class="fab fa-facebook-square fa-2x"></i>
              <% end %>

              <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "btn btn-link p-0" do %>
                <i class="fab fa-google-plus-square fa-2x"></i>
              <% end %>

              <%= button_to user_twitter2_omniauth_authorize_path, method: :post, class: "btn btn-link p-0" do %>
                <i class="fab fa-twitter-square fa-2x"></i>
              <% end %>
            </div>
          </div>

          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
              </div>

              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
              </div>

              <div class="row align-items-center remember">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>

              <div class="form-group">
                <%= f.submit "Login", class: "btn float-right login_btn" %>
              </div>
            <% end %>
          </div>

          <div class="card-footer">
            <div class="d-flex justify-content-center links">
              <%= "Don't have an account?" %>
              <%= link_to "Sign up", new_registration_path(resource_name) %>
            </div>
            <div class="d-flex justify-content-center">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
