<!DOCTYPE html>
<html>
  <head>
    <title><%= t("devise_custom.change_password_title") %></title>

    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" crossorigin="anonymous">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Numans" rel="stylesheet">
  </head>

  <body class="login-page lightly-transparent">
    <div class="container mt-4">
      <div class="d-flex justify-content-center h-100">
        <div class="card lightly-transparent">
          <div class="card-header">
            <h3><%= t("devise_custom.change_password_title") %></h3>
          </div>

          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: t("devise_custom.new_password_placeholder") %>
              </div>

              <% if @minimum_password_length %>
                <p class="text-muted small mb-3"><%= t("devise_custom.password_length_hint", count: @minimum_password_length) %></p>
              <% end %>

              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t("devise_custom.new_password_confirmation_placeholder") %>
              </div>

              <div class="form-group text-center">
                <%= f.submit t("devise_custom.change_password_cta"), class: "btn btn-sm btn-primary px-4" %>
              </div>
            <% end %>
          </div>

          <div class="card-footer mt-2">
            <div class="d-flex justify-content-center">
              <%= link_to t("devise_custom.back_to_login"), new_session_path(resource_name) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
