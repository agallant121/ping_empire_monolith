<% content_for :body_class, "login-page" %>

<div class="login-main">
  <div class="login-brand"><%= t("devise_custom.brand") %></div>
  <div class="login-card">
    <h1><%= t("devise_custom.change_password_title") %></h1>
    <p class="login-meta"><%= t("devise_custom.change_password_subtitle") %></p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-key"></i></span>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: t("devise_custom.new_password_placeholder") %>
      </div>

      <% if @minimum_password_length %>
        <p class="login-meta small"><%= t("devise_custom.password_length_hint", count: @minimum_password_length) %></p>
      <% end %>

      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-key"></i></span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t("devise_custom.new_password_confirmation_placeholder") %>
      </div>

      <%= f.submit t("devise_custom.change_password_cta"), class: "btn login_btn" %>
    <% end %>

    <div class="login-links">
      <div class="login-meta">
        <%= link_to t("devise_custom.back_to_login"), new_session_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
